# Environment Configuration for L10nLight
# Copy this file to .env and fill in the values

# Application Environment
# Options: development, production, test, docker
APP_ENV=development

# Server Configuration
APP_SERVER_HOST=0.0.0.0
APP_SERVER_PORT=5000

# CORS Configuration
# Can be a JSON array string like '["*"]' or '["http://localhost:3000", "https://example.com"]'
# Or a comma-separated list: "http://localhost:3000,https://example.com"
# Or "*" for all origins
APP_ALLOWED_ORIGINS=["*"]

# Granian Server Configuration
APP_GRANIAN_WORKERS=2

# Database Configuration
# PostgreSQL example: postgresql+asyncpg://user:password@localhost:5432/dbname
# SQLite example: sqlite+aiosqlite:///./app.db
APP_DB_URL=postgresql+asyncpg://app:app@localhost:5432/app

# SQLAlchemy Configuration
# Set to true to echo SQL queries (useful for debugging)
APP_ECHO_SQL=false

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
APP_LOG_LEVEL=INFO

